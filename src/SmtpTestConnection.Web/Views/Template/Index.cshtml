@using SmtpTestConnection.Web.Startup
@model ResponseModel
@{
    ViewBag.ActiveMenu = PageNames.Template;
    //string source = setframe;
}

@section scripts
{
    <environment names="Development">
        <script src="~/js/views/home/index.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/views/home/index.min.js"></script>
    </environment>
}

<h2>Template Previews</h2>

<div class="row">
    <div class="text-left"><a href="/template/custometemplate">Fetch your templates</a></div>
</div>
    @foreach (var tem in Model.Templates)
    {
        <div class="row">
            <div class="bg-white rounded shadow-sm">
                <div class="box">
                    <iframe srcdoc="@tem.Value" src="" allowfullscreen="true" style="border:none; width:800px; height:1000px" scrolling="yes"></iframe>
                </div>
                <div class="p-4">
                    <h5> <span>&nbsp;</span> <a href="#" class="text-dark">@tem.Key</a> <span class="badge text-danger px-3 rounded-pill font-weight-normal">New</span> </h5>
                </div>
            </div>
        </div>
        <div class="row"> <hr /></div>
    }


